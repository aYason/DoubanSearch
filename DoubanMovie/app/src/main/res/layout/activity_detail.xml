<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.yason.doubanmovie.module.base.BaseActivity">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yason.doubanmovie.module.search.views.MovieContentView
      android:id="@+id/movie_content_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    </com.yason.doubanmovie.module.search.views.MovieContentView>
  </ScrollView>

  <com.yason.doubanmovie.module.search.views.TranslucentTitleBar
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp">
  </com.yason.doubanmovie.module.search.views.TranslucentTitleBar>

</FrameLayout>
